<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">News
            <small>Lates news</small>
        </h1>
    </div>
</div>

<div class="row">


    <div class="col-md-9">


      <div class="row">
        <% @items.each_with_index do |item| %>
            <div class="col-md-12 portfolio-item">
              <span>&nbsp;</span>
              <p>
                <%= link_to item.heading, blog_post_path(id:item.id), class: '' %>     
              </p>
              <em class="pull-right">
                <%= item.created_at.strftime("%m/%d/%Y") %>          
              </em>
            </div>                     
        <% end %>             
        <%= will_paginate @items %>            
      </div>

    </div>

    <div class="col-md-3">
      <%= render 'tags' %>
    </div>

</div>

