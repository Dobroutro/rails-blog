<div class="row">
    <div class="col-md-9">
      <div class="row">

        <div class="col-md-12 portfolio-item">
            <h3>                 
              <%= @item.heading %>                  
            </h3>        
            <div>
              <img class="img-responsive img-thumbnail" src="<%= @item.image %> " alt="">
            </div>
            <span>&nbsp;</span>

            <p>                 
              <%= @item.body %>                  
            </p>            
            <em class="pull-right">
              <%= @item.created_at.strftime("%m/%d/%Y") %>          
            </em>              
        </div>        
      </div>

    </div>

    <div class="col-md-3">
      <%= render 'tags' %>
    </div>


</div>

