<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">News
            <small>Lates news</small>
        </h1>
    </div>
</div>

<div class="row">
  <div class="col-md-9">

    <div class="row">
      <% unless @items[0].blank? %>
        <div class="col-md-6 portfolio-item">
            <%= link_to blog_post_path(id:@items[0].id) do %>
               <img class="img-responsive img-thumbnail" src="<%= @items[0].image.thumb.url %>" alt="">
            <% end %>                
            <span>&nbsp;</span>
            <p>
              <%= link_to @items[0].heading, blog_post_path(id:@items[0].id), class: '' %>     
            </p>
            <em class="pull-right">
              <%= @items[0].created_at.strftime("%m/%d/%Y") %>          
            </em>                
        </div>
      <% end %> 
      <% unless @items[1].blank? %>
        <div class="col-md-6 portfolio-item">
            <%= link_to blog_post_path(id:@items[1].id) do %>
              <img class="img-responsive img-thumbnail" src="<%= @items[1].image.thumb.url %> " alt="">
            <% end %>               
            <span>&nbsp;</span>
            <p>         
              <%= link_to @items[1].heading, blog_post_path(id:@items[1].id), class: '' %>     
            </p>
            <em class="pull-right">
              <%= @items[1].created_at.strftime("%m/%d/%Y") %>          
            </em>              
        </div>
      <% end %>   
      <% @items.each_with_index do |item, index| %>
        <% if index > 1 %>
          <div class="col-md-6 portfolio-item">
            <span>&nbsp;</span>
            <p>
              <%= link_to item.heading, blog_post_path(id:item.id), class: '' %>     
            </p>
            <em class="pull-right">
              <%= item.created_at.strftime("%m/%d/%Y") %>          
            </em>
          </div>          
        <% end %>             
      <% end %>             
                
    </div>

  </div>

  <div class="col-md-3">
    <%= render 'tags' %>
  </div>

</div>

